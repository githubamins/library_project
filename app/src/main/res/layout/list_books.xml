<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layoutDirection="rtl"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_bookName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="نام کتاب"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cases"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_counter_border"
                        android:backgroundTint="#fbc02d"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="1"
                        android:layout_marginEnd="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/text_counter_border"
                        android:backgroundTint="@android:color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:tooltipText="نویسنده"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="نویسنده"
                        android:layout_marginStart="15dp"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/text_counter_border"
                        android:backgroundTint="#F44336"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:tooltipText="موضوع"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="موضوع"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_translator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/text_counter_border"
                        android:backgroundTint="#fdfdfd"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:tooltipText="مترجم"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:textColor="@android:color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />




                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>